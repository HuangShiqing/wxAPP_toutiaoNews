/**index.wxss**/
page {
  height: 100%;
}
.index {
  display: flex;
  flex-direction: column;
  height: 100vh; /* Êàñ100%üëà */
  box-sizing: border-box;
  /* Á°Æ‰øù index ÁöÑÁà∂Â±ÇÔºàÂ¶ÇÈ°µÈù¢Ê†πËäÇÁÇπÔºâ‰πüÊòØ100% */
}
::-webkit-scrollbar {
  height: 0;
  width: 0;
}
.header-panel {
  height: 80rpx;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  background-color: #fefefe;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  box-shadow: 0 0.5px 0 0 #ececec;
}
.header-title {
  position: relative;
  width: 120rpx;
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  font-size: 32rpx;
  cursor: pointer;
  box-sizing: border-box;
  color: #232323;
  /* border-bottom: 2rpx solid rgba(0, 0, 0, 0.2); */
  text-align: center;
}
.header-title-active {
  /* border-bottom: 4rpx solid #C34943; */
  color: #c34943;
  z-index: 99;
  font-size: 34rpx;
}
/*content  */
.list-container {
  flex: 1;
  min-height: 0;
  padding-top: 80rpx;
  background: #fafafa;
}
.list-item {
  flex: 1;
  height: 180rpx;
  width: 100%;
  box-sizing: border-box;
}
.list-item-content {
  position: relative;
  padding: 20rpx 30rpx 20rpx 30rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.list-item-left {
  height: 140rpx;
  width: 186rpx;
  margin-right: 20rpx;
  float: left;
}
.list-item-left image {
  width: 100%;
  height: 100%;
}
.list-item-right {
  float: left;
  width: 484rpx;
  height: 140rpx;
  position: relative;
}
.article-title {
  font-size: 34rpx;
  color: #404040;
  overflow-y: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.article-source::before {
  /* content: '‰ΩúËÄÖ:'; */
  font-size: 24rpx;
  color: #888;
  margin-right: 10rpx;
}
.article-source {
  font-size: 24rpx;
  color: #888;
  position: absolute;
  bottom: 0;
  right: 0;
}
.article-editTime {
  font-size: 24rpx;
  color: #a8a8a8;
  position: absolute;
  bottom: 0;
  left: 0;
}
.no-more-text {
  text-align: center;
  color: #888;
  padding: 24rpx;
}